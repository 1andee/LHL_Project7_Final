  <%= render 'projects_sidebar' %>

<section class="home-user-feed">

  <section id="post-input" class="comment-box" data-turbolinks-permanent>

  <%= form_tag(feeds_path, method: :post, remote: false) do %>
    <%= text_area_tag(:post) %>
    <%= submit_tag("Post Message") %>
  <% end %>

  </section>

  <section class="feed">
    <h1>User Feed</h1>
    <% if @feeds.present? %>
      <div id="feeds-list" data-turbolinks-temporary>
        <%= render @feeds %>
      </div>
    <% else %>
      <article  class="no-message">
          <p> You Have No Activites, Create A New Project [Link To Create Project Page].</p>
        </article>
    <% end %>
      <button> <%= link_to "Reload", root_path %> </button>
  </section>

</section>
