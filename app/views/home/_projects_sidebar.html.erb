<section class="home-projects-sidebar">
  <h2>Projects</h2>
  <%= link_to 'New Project', new_project_path, { :class=>"btn new-project" } %>
  <h3>Mentor</h3>
  <% @projects.each do |project| %>
    <% if current_user.id == project.mentor_id %>
      <%= link_to project.name, project_path(project.id) %>
    <% end %>
  <% end %>
  <h3>Mentee</h3>
  <% @projects.each do |project| %>
    <% if current_user.id == project.mentee_id %>
    <%= link_to project.name, project_path(project.id) %>
    <% end %>
  <% end %>
  <h3>Archive</h3>
  <%= link_to 'My Archived Projects', user_archive_index_path(current_user.id), { :class=>"btn" } %>
</section>
