<% @projects.each do |project| %>
  <% if project.mentor_id && project.mentee_id && project.public %>
  <% mentor = User.get_user(project.mentor_id)%>
  <% mentee = User.get_user(project.mentee_id)%>
    <section class="mentor-project">
      <section class="users">
        <section class="user">
          <h5>Mentor:</h5>
          <div class="user-image"><%= image_tag mentor.avatar.url(:thumb) %></div>
          <p><%= mentee.name %></p>
        </section>
        <section class="user">
          <h5>Mentee:</h5>
          <div class="user-image"><%= image_tag mentee.avatar.url(:thumb) %></div>
          <p><%= mentee.name %></p>
        </section>
      </section>
      <section class="project-info">
        <h5>Project Name:</h5>
        <p><%= project.name%></p>
        <h5>Project Description:</h5>
        <p><%= project.description%></p>
        <h5>Project Skills:</h5>
        <% project.skills.each do |project_skill|%>
          <p><%= project_skill.skill_name %></p>
        <% end %>
        <%= link_to 'View Project', project_path(project), { :class=>"btn" } %>
      </section>
    </section>
  <% end %>
<% end %>
