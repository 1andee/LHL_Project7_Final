<% flash.each do |key, value| %>
  <%= content_tag :div, value, class: "flash #{key}" %>
<% end %>

<% if current_user %>
  Signed in as <%= current_user.name %>
  <%= link_to "Logout", '/logout' %>
<% end %>

<div id="register">
  <%= render 'users/register' %>
</div>

<div id="login">
  <%= render 'sessions/login' %>
</div>
